{% block subject %}Example Email Subject{% endblock %}
{% block content %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <style type="text/css">
    body {
        font-family: Arial, sans-serif;
        font-size: 14px;
        color: #333333;
    }
    
    h1 {
        font-size: 24px;
        font-weight: bold;
        margin: 0 0 20px;
    }
    
    p {
        margin: 0 0 10px;
    }
    
    strong {
        font-weight: bold;
    }
    
    .signature {
        font-style: italic;
        color: #999999;
        margin-top: 20px;
        border-top: 1px solid #cccccc;
        padding-top: 10px;
    }
    </style>
</head>
<body>
    <p>Hi {{ c.first_name }},</p>
    <p>This is a test message from <a href="fossbilling.org">fossbilling.org</a></p>
    <p class="signature">{{ guest.system_company.signature }}</p>
</body>
</html>
{% endblock %}
